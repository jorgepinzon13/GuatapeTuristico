<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jorge.guatapeturistico.Rest3Activity"
    tools:showIn="@layout/app_bar_rest3"
    android:orientation="vertical"
    android:background="@color/khaki">

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Thai Terrace"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="30dp"
        android:textColor="@color/saddlebrown"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/rest3_3"
            android:layout_margin="5dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/rest3_2"
            android:layout_margin="5dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/rest3_1"
            android:layout_margin="5dp"
            />



    </LinearLayout>


</LinearLayout>
